<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.githubuser">

    <permission
        android:name="com.example.githubuser.READ_DATABASE"
        android:protectionLevel="normal" />
    <permission
        android:name="com.example.githubuser.WRITE_DATABASE"
        android:protectionLevel="normal" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/GitLightTheme">

        <provider
            android:name=".contentprovider.GithubProvider"
            android:authorities="com.example.githubuser"
            android:enabled="true"
            android:exported="true"
            android:readPermission="com.example.githubuser.READ_DATABASE"
            android:writePermission="com.example.githubuser.WRITE_DATABASE" />

        <receiver
            android:name=".ui.setting.MyReceiver"
            android:enabled="true"
            android:exported="true" />
        <activity android:name=".MainActivity" />
        <activity android:name=".ui.setting.DailyReminder" />
        <activity android:name=".ui.explore.DetailActivity" />
        <activity
            android:name=".welcome.Welcome"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>